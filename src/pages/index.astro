---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import ViewTransitions from 'astro/components/ViewTransitions.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} image=""/>
		<ViewTransitions/>
	</head>
		<Header title={SITE_TITLE} />
		<main>
			<div class="home-container">
				<div class="home-copy">
				<h1> shitposting mental </h1>
				</div>
				<div class="hero-image-container">
				<picture>
				<img class="hero-image" width='800px' src="https://i.etsystatic.com/8412806/r/il/5aad27/2074906857/il_fullxfull.2074906857_qdso.jpg"/> 
				</picture>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.home-container {
	  align-items: center;
	  justify-content: center;
	  margin: 2em 0;
	  min-height: 400px;
	  text-align: center;
	}
  
	.home-copy {
	  flex: 1;
	  padding: 0 1em;
	}
  
	.home-copy h1 {
	  font-weight: 700;
	  margin-bottom: 0.5em;
	  line-height: 1.3;
	}
  
  
	.hero-image-container {
	  margin: 0 1em;
	  text-align: center;
	}
  
	.hero-image-container picture {
	  display: block;
	  
	}
  
  
	.hero-image {
	  width: 60%;
	  margin-bottom: 1em;
	}
  
  
	  .home-container {
		flex-direction: column;
	  }
  
	  .home-copy {
		flex: 0;
		padding-bottom: 2em;
		text-align: center;
	  }
  </style>