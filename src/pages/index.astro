---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import ViewTransitions from 'astro/components/ViewTransitions.astro';
---
<style>
	.home-container {
				align-items: center;
				display: flex;
				flex: 1;
				justify-content: space-around;
				min-height: 400px;
				margin: 3em;
	}
	.hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container img {
    display: block;
	padding: 0em 4em 0em 0em;
    min-height: 250px;
  }

  .hero-image {
    width: 100%;
    max-width: 550px;
    margin-bottom: 1em;
  }
  .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
</style>

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} image=""/>
		<ViewTransitions/>
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<div class="home-container">
				<div class="home-copy">
				<h1> shitposting mental </h1>
				</div>
				<div class="hero-image-container">
				</picture>
				<img width='900px' src="https://i.etsystatic.com/8412806/r/il/5aad27/2074906857/il_fullxfull.2074906857_qdso.jpg"/> 
				</picture>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
